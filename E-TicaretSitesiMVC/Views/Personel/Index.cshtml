@using E_TicaretSitesiMVC.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-striped">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Görsel</th>
        <th>Departman</th>
        <th>Durum</th>
        <th>Güncelle</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.PersonelID</td>
            <td>@p.PersonelAd</td>
            <td>@p.PersonelSoyad</td>
            <td>@p.PersonelGorsel</td>
            <td>@p.Departman.DepartmanAd</td>
            <td>
                @if (p.Durum)
                {<span class="text-success">Aktif</span>}
                else
                {<span class="text-danger">Pasif</span>}
            </td>
            <td><a href="/Cari/CariGetir/@p.PersonelID" class="btn btn-primary">Güncelle</a></td>
            <td><a href="/Cari/CariSiparisDetay/@p.PersonelID" class="btn" style="background-color:gold">Satışlar</a></td>
        </tr>
    }
</table>
<a href="/Personel/PersonelEkle" class="btn btn-info">Ekle</a>