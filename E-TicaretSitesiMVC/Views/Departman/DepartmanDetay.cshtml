@using E_TicaretSitesiMVC.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Departman Detay - " + ViewBag.DepartmanAdi; // Sayfa başlığına departman adını ekliyoruz
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Departman Detay</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.DepartmanAdi</li>
</ol>

<table class="table table-hover">
    <tr>
        <th>Personel</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.PersonelAd @x.PersonelSoyad</td>
            <td><a href="/Departman/DepartmanPersonelSatis/@x.PersonelID" class="btn btn-success" style="background-color:forestgreen">Satışlar</a></td>
        </tr>
    }

</table>