@using E_TicaretSitesiMVC.Models.Siniflar
@model List<Cari>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table class="table table-striped">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.CariID</td>
            <td>@x.CariAd</td>
            <td>@x.CariSoyad</td>
            <td>@x.CariSehir</td>
            <td>@x.CariMail</td>
            <td><a href="/Cari/CariSil" class="btn btn-danger">Sil</a></td>
            <td><a href="/Cari/CariGetir" class="btn btn-primary">Güncelle</a></td>
            <td><a href="/Cari/CariDetay" class="btn" style="background-color:gold">Detay</a></td>
        </tr>
    }
</table>
<a href="/Cari/CariEkle" class="btn btn-info">Ekle</a>

