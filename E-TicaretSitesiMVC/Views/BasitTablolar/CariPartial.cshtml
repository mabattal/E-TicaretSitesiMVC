@model IEnumerable<E_TicaretSitesiMVC.Models.Siniflar.CariGrup>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Müşteri Şehir Tablosu</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Şehir</th>
                    <th>Oran</th>
                    <th style="width: 40px">Şehir</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int siraNo = 0;
                    int oran = 0;
                    int maksimumSayi = 5;
                    int sayac = 0;
                }

                @foreach (var x in Model)
                {
                    if (sayac >= maksimumSayi)
                    {
                        break;
                    }

                    <tr>
                        <td>@{siraNo++;}@siraNo</td>
                        <td>@x.Sehir</td>
                        <td>
                            @{oran = (int)(((decimal)x.Adet / x.ToplamAdet) * 100); }
                            @if (oran < 33)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: @oran%"></div>
                                </div>
                            }
                            else if (oran >= 33 && oran < 66)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-warning" style="width: @oran%"></div>
                                </div>
                            }
                            else
                            {
                                <div class="progress progress-xs progress-striped active">
                                    <div class="progress-bar bg-success" style="width: @oran%"></div>
                                </div>
                            }
                        </td>
                        <td><span class="badge bg-danger">@oran%</span></td>
                    </tr>

                    sayac++;
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
