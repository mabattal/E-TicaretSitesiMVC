@using E_TicaretSitesiMVC.Models.Siniflar
@model List<FaturaDetay>
@{
    ViewBag.Title = "Fatura Detay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Fatura Detay</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Fatura Seri/Sıra No: @ViewBag.serisira</li>
</ol>

<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Ürün</th>
        <th>Miktar</th>
        <th>Birim Fiyat</th>
        <th>Tutar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.FaturaDetayID</td>
            <td>@x.Urun.UrunAd</td>
            <td>@x.Miktar</td>
            <td>@x.BirimFiyat</td>
            <td>@x.Tutar</td>
        </tr>
    }

</table>
@Html.ActionLink("Ürün Ekle", "FaturaDetayEkle", "Fatura", new { faturaID = ViewBag.FaturaID }, new { @class = "btn btn-success" })

