@model E_TicaretSitesiMVC.Models.Siniflar.FaturaDetay
@{
    ViewBag.Title = Model.FaturaDetayID > 0 ? "Fatura Detay Düzenle" : "Yeni Ürün";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>@ViewBag.Title</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Fatura Seri/Sıra No: @ViewBag.serisira</li>
</ol>
@{
    string formAction = Model.FaturaDetayID > 0 ? "SatisGuncelle" : "FaturaDetayEkle";
    string text = Model.FaturaDetayID > 0 ? "Güncelle" : "Kaydet";
}

@using (Html.BeginForm(formAction, "Fatura", new { faturaID = ViewBag.FaturaID }, FormMethod.Post))
{
    <form class="form-group" method="post">
        @Html.HiddenFor(x => x.FaturaDetayID)
        @Html.Label("Ürün:")
        @Html.DropDownListFor(x => x.UrunID, (List<SelectListItem>)ViewBag.Urunler, new { @class = "form-control" })
        <br />
        @Html.Label("Miktar:")
        @Html.TextBoxFor(x => x.Miktar, new { @class = "form-control" })
        <br />
        <button class="btn btn-success">@text</button>
    </form>
}



