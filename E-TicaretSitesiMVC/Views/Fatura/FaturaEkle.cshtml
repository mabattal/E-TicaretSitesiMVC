@model E_TicaretSitesiMVC.Models.Siniflar.Fatura
@{
    ViewBag.Title = Model.FaturaID > 0 ? "Fatura Düzenle" : "Yeni Fatura";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>@ViewBag.Title</h2>
<br />

@{
    string formAction = Model.FaturaID > 0 ? "FaturaGuncelle" : "FaturaEkle";
    string text = Model.FaturaID > 0 ? "Güncelle" : "Kaydet";
}

@using (Html.BeginForm(formAction, "Fatura", FormMethod.Post))
{
    <form class="form-group" method="post">
        @Html.HiddenFor(x => x.FaturaID)
        <label>Seri No:</label>
        @Html.TextBoxFor(x => x.FaturaSeriNo, new { @class = "form-control" })
        <br />
        <label>Sıra No:</label>
        @Html.TextBoxFor(x => x.FaturaSiraNo, new { @class = "form-control" })
        <br />
        <label>Veri Dairesi:</label>
        @Html.TextBoxFor(x => x.VergiDairesi, new { @class = "form-control" })
        <br />        
        <label>Teslim Eden:</label>
        @Html.TextBoxFor(x => x.TeslimEden, new { @class = "form-control" })
        <br />
        <label>Teslim Alan:</label>
        @Html.TextBoxFor(x => x.TeslimAlan, new { @class = "form-control" })
        <br />        
        <button class="btn btn-success">@text</button>
    </form>
}